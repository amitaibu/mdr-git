{% extends 'base.html.twig' %}

{% block title %}Hello GroupMeetingController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello!</h1>

    <div>
    <a href="{{ path('group_meetings')}}">
        Back to group meetings
    </a>
    </div>

    {{ dump(group_meeting) }}

    <ul>
        {% for motherIdentifier in group_meeting.motherIdentifiers %}
            <li>
                <a href="{{ path('mother', {fileName: motherIdentifier.fileId}) }}">
                    {{ motherIdentifier.firstName }} {{ motherIdentifier.lastName }}
                </a>
            </li>
        {% endfor %}
    </ul>

</div>
{% endblock %}
