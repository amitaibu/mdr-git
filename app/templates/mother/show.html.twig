{% extends 'base.html.twig' %}

{% block title %}Hello MotherController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <div>
        <a href="{{ path('group_meeting', {fileId: group_meeting.fileId}) }}">
            Back to group meeting {{  group_meeting.name }}
        </a>
    </div>

    {{ dump(mother) }}

    <h1>
        {{ mother.identifier.firstName }} {{ mother.identifier.lastName }}
    </h1>

    <ul>
        {% for childIdentifier in mother.identifier.childrenIdentifiers %}
            <li>
                <a href="{{ path('child', {groupMeetingFileId: group_meeting.fileId, fileId: childIdentifier.fileId}) }}">
                    {{ childIdentifier.firstName }} {{ childIdentifier.lastName }}
                </a>
            </li>
        {% endfor %}
    </ul>


</div>
{% endblock %}
